# ===========================================
# Orbis v2.0 - PRODUCTION CONFIGURATION
# ===========================================
# Copy to .env.production and fill with REAL values
# NEVER commit .env.production to Git!

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=production
DEBUG=false

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Orbis API
API_VERSION=2.0.0

# Railway fornece automaticamente
PORT=8000

# Atualizar com domínio Vercel real
CORS_ORIGINS=https://orbis.vercel.app,https://orbis-git-*.vercel.app

# ===========================================
# DATABASE (Railway fornece automaticamente)
# ===========================================
DATABASE_URL=${DATABASE_URL}

# Ou configure manualmente:
POSTGRES_DB=orbis
POSTGRES_USER=orbis
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# ===========================================
# REDIS (Railway + redis.conf)
# ===========================================
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# ===========================================
# SECURITY - CRITICAL!
# ===========================================
# Gerar com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_KEY

# ===========================================
# ML SERVICES (CPU-only para Railway Free)
# ===========================================
ASR_MODEL=openai/whisper-base
ASR_DEVICE=cpu
MT_MODEL=facebook/nllb-200-distilled-600M
MT_DEVICE=cpu
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_DEVICE=cpu

# OpenAI (opcional - para fallback)
OPENAI_API_KEY=

# ===========================================
# FEATURES & LIMITS
# ===========================================
MAX_ROOM_PARTICIPANTS=50
MAX_ROOM_DURATION=240
TARGET_LATENCY_MS=800
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# EMAIL (Gmail SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Orbis

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# LAZY LOADING & OPTIMIZATION
# ===========================================
ML_LAZY_LOAD=true
ML_AUTO_DETECT_HARDWARE=true
ML_AUTO_UNLOAD_ENABLED=true
ML_UNLOAD_AFTER_IDLE_SECONDS=3600
ML_CHECK_IDLE_INTERVAL_SECONDS=300

# ===========================================
# FEATURE FLAGS (Production)
# ===========================================
ENABLE_AUTH=true
ENABLE_ROOMS=true
ENABLE_WEBSOCKET=true
ENABLE_VOICE_CLONING=true
ENABLE_TRANSLATION=true
ENABLE_TRANSCRIPTION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_GAMIFICATION=true
ENABLE_RECORDINGS=true

# Desabilitados em produção free tier
ENABLE_AI_ASSISTANT=false
ENABLE_VOICE_MARKETPLACE=false
ENABLE_SOCIAL_NETWORKING=false
ENABLE_ENTERPRISE_FEATURES=false
ENABLE_DISASTER_RECOVERY=false
ENABLE_DATABASE_SHARDING=false
ENABLE_OAUTH=false
ENABLE_PAYMENTS=false

# ===========================================
# STORAGE
# ===========================================
STORAGE_PATH=./data
VOICES_PATH=./data/voices
UPLOADS_PATH=./data/uploads
MODELS_PATH=./data/models
